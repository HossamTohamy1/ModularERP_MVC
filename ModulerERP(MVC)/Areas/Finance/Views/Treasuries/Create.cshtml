@model ModulerERP_MVC_.Areas.Finance.ViewModels.TreasuryViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "إضافة خزينة جديدة";
}

<div class="container-fluid">
    <!-- Header with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-plus-circle text-primary me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index">
                                    <i class="fas fa-money-bill-wave me-1"></i>الخزائن
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">إضافة جديد</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i>رجوع للقائمة
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8 col-xl-7 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>بيانات الخزينة
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Treasury Name & Company -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-signature text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name"
                                       class="form-control form-control-lg"
                                       placeholder="مثال: الخزينة الرئيسية"
                                       autofocus />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CompanyId" class="form-label fw-bold">
                                    <i class="fas fa-building text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.CompanyId)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CompanyId"
                                        class="form-select form-select-lg"
                                        asp-items="ViewBag.Companies">
                                    <option value="">-- اختر الشركة --</option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Currency & Status -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="CurrencyCode" class="form-label fw-bold">
                                    <i class="fas fa-money-bill text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.CurrencyCode)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CurrencyCode"
                                        class="form-select form-select-lg"
                                        asp-items="ViewBag.Currencies">
                                    <option value="">-- اختر العملة --</option>
                                </select>
                                <span asp-validation-for="CurrencyCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-bold">
                                    <i class="fas fa-toggle-on text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.Status)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select form-select-lg">
                                    <option value="0">
                                        <i class="fas fa-check-circle"></i> نشط
                                    </option>
                                    <option value="1">غير نشط</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Journal Account -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="JournalAccountId" class="form-label fw-bold">
                                    <i class="fas fa-book text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.JournalAccountId)
                                    <span class="text-muted small">(اختياري)</span>
                                </label>
                                <select asp-for="JournalAccountId"
                                        class="form-select form-select-lg"
                                        asp-items="ViewBag.GlAccounts">
                                    <option value="">-- اختر حساب اليومية (اختياري) --</option>
                                </select>
                                <span asp-validation-for="JournalAccountId" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    حساب اليومية المحاسبية المرتبط بهذه الخزينة
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left text-primary me-1"></i>
                                @Html.DisplayNameFor(m => m.Description)
                                <span class="text-muted small">(اختياري)</span>
                            </label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"
                                      placeholder="أدخل وصف مختصر للخزينة..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <i class="fas fa-info-circle fa-2x me-3"></i>
                            <div>
                                <strong>ملاحظة:</strong> الحقول المميزة بـ <span class="text-danger">*</span> إلزامية
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-secondary">
                                <i class="fas fa-times me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary px-5">
                                <i class="fas fa-save me-2"></i>حفظ الخزينة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Add animation to form
            $('.card').hide().fadeIn(500);

            // Focus on first input
            $('input[asp-for="Name"]').focus();
        });
    </script>
}