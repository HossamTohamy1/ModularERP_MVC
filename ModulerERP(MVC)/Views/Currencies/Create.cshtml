@model ModulerERP_MVC_.Models.Finance.DTOs.CreateCurrencyDto

@{
    ViewData["Title"] = "Create Currency";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">
                        <i class="fas fa-dollar-sign me-1"></i>Currencies
                    </a>
                </li>
                <li class="breadcrumb-item active">Create New Currency</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Create New Currency
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Code" class="form-label">
                                Currency Code <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Code"
                                   class="form-control text-uppercase"
                                   placeholder="e.g., USD"
                                   maxlength="3"
                                   style="text-transform: uppercase;" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                3-letter ISO currency code (e.g., USD, EUR, EGP)
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Symbol" class="form-label">
                                Currency Symbol <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Symbol"
                                   class="form-control"
                                   placeholder="e.g., $" />
                            <span asp-validation-for="Symbol" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Currency symbol (e.g., $, €, £)
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            Currency Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="e.g., US Dollar" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Decimals" class="form-label">
                                Decimal Places <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Decimals" class="form-select">
                                <option value="0">0 (e.g., Japanese Yen)</option>
                                <option value="2" selected>2 (Most currencies)</option>
                                <option value="3">3 (e.g., Dinar)</option>
                                <option value="4">4 (e.g., Crypto)</option>
                            </select>
                            <span asp-validation-for="Decimals" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Status</label>
                            <div class="form-check form-switch">
                                <input asp-for="IsActive"
                                       class="form-check-input"
                                       type="checkbox"
                                       role="switch"
                                       id="isActiveSwitch"
                                       checked />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <span id="statusLabel">Active</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>Tip:</strong> Currency codes should follow ISO 4217 standard.
                        Make sure the currency code is unique.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Currency
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Code').on('input', function () {
                this.value = this.value.toUpperCase();
            });

            $('#isActiveSwitch').on('change', function () {
                if (this.checked) {
                    $('#statusLabel').text('Active').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#statusLabel').text('Inactive').removeClass('text-success').addClass('text-danger');
                }
            });

            if ($('#isActiveSwitch').is(':checked')) {
                $('#statusLabel').addClass('text-success');
            } else {
                $('#statusLabel').addClass('text-danger');
            }
        });
    </script>
}