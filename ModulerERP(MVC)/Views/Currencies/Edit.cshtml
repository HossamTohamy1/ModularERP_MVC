@model ModulerERP_MVC_.Models.Finance.DTOs.UpdateCurrencyDto

@{
    ViewData["Title"] = "Edit Currency";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">
                        <i class="fas fa-dollar-sign me-1"></i>Currencies
                    </a>
                </li>
                <li class="breadcrumb-item active">Edit Currency</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Currency
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <!-- ⭐ شيل الـ hidden Id field -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Code" class="form-label">
                                Currency Code <span class="text-danger">*</span>
                            </label>
                            <!-- ⭐ اعمل الـ Code read-only عشان ميتغيرش -->
                            <input asp-for="Code"
                                   class="form-control text-uppercase"
                                   maxlength="3"
                                   readonly
                                   style="text-transform: uppercase; background-color: #e9ecef;" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Currency code cannot be changed
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Symbol" class="form-label">
                                Currency Symbol <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Symbol"
                                   class="form-control"
                                   placeholder="e.g., $" />
                            <span asp-validation-for="Symbol" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            Currency Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="e.g., US Dollar" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Decimals" class="form-label">
                                Decimal Places <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Decimals" class="form-select">
                                <option value="0">0 (e.g., Japanese Yen)</option>
                                <option value="2">2 (Most currencies)</option>
                                <option value="3">3 (e.g., Dinar)</option>
                                <option value="4">4 (e.g., Crypto)</option>
                            </select>
                            <span asp-validation-for="Decimals" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Status</label>
                            <div class="form-check form-switch">
                                <input asp-for="IsActive"
                                       class="form-check-input"
                                       type="checkbox"
                                       role="switch"
                                       id="isActiveSwitch" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <span id="statusLabel">Active</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> Changing currency settings may affect related transactions.
                        Please ensure this currency is not actively being used before making significant changes.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // ⭐ مش محتاجين uppercase للـ Code لأنه read-only

            function updateStatusLabel() {
                if ($('#isActiveSwitch').is(':checked')) {
                    $('#statusLabel').text('Active').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#statusLabel').text('Inactive').removeClass('text-success').addClass('text-danger');
                }
            }

            $('#isActiveSwitch').on('change', updateStatusLabel);
            updateStatusLabel();
        });
    </script>
}