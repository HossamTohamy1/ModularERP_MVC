@model IEnumerable<ModulerERP_MVC_.Models.Finance.DTOs.CurrencyDto>

@{
    ViewData["Title"] = "Currencies";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Currencies Management</h2>

            @* Success/Error Messages *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Currency
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>No currencies found!</strong>
                    <p>Model is @(Model == null ? "NULL" : "Empty")</p>
                    <p>Please add currencies using the "Add New Currency" button above.</p>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped table-hover" id="currenciesTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Symbol</th>
                                    <th>Decimals</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var currency in Model)
                                {
                                    <tr>
                                        <td><strong>@currency.Code</strong></td>
                                        <td>@currency.Name</td>
                                        <td>@currency.Symbol</td>
                                        <td>@currency.Decimals</td>
                                        <td>
                                            @if (currency.IsActive)
                                            {
                                                <span class="badge" style="background-color: green; color: white;">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge" style="background-color:red ; color: white;">Inactive</span>
                                            }
                                        </td>
                                        <td>@currency.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-code="@currency.Code"
                                                   class="btn btn-sm btn-info" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-code="@currency.Code"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete('@currency.Code', '@currency.Name')"
                                                        title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@* Delete Confirmation Modal *@
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete currency <strong id="currencyName"></strong> (<strong id="currencyCode"></strong>)?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(code, name) {
            $('#currencyCode').text(code);
            $('#currencyName').text(name);
            $('#deleteForm').attr('action', '@Url.Action("Delete", "Currencies")/' + code);
            $('#deleteModal').modal('show');
        }

        $(document).ready(function() {
            if ($.fn.DataTable) {
                $('#currenciesTable').DataTable({
                    "pageLength": 25,
                    "order": [[0, "asc"]]
                });
            }

            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}
