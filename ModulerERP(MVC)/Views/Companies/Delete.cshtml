@model ModulerERP_MVC_.Finance.Company.ViewModels.CompanyDetailsViewModel

@{
    ViewData["Title"] = "Delete Company";
}

<!-- إضافة SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Warning Header Card -->
            <div class="card border-danger mb-4 shadow-lg">
                <div class="card-header bg-danger text-white py-4">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="rounded-circle bg-white p-3 me-3">
                            <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                        </div>
                        <h1 class="h2 mb-0">Confirm Deletion</h1>
                    </div>
                    <p class="mb-0 text-center opacity-75">This action cannot be undone!</p>
                </div>

                <!-- Error Message -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Error!</strong> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card-body p-0">
                    <!-- Company Info -->
                    <div class="p-4 bg-light border-bottom">
                        <div class="d-flex flex-column flex-md-row align-items-center justify-content-between mb-4">
                            <div class="d-flex align-items-center mb-3 mb-md-0">
                                <i class="fas fa-building fa-2x text-danger me-3"></i>
                                <div>
                                    <h2 class="h4 mb-1">Company to Delete</h2>
                                    <div class="badge bg-gradient-primary fs-5 p-2">
                                        @Model.Name
                                    </div>
                                </div>
                            </div>
                            <div class="text-center text-md-end">
                                <small class="text-muted d-block">Company ID</small>
                                <code class="fs-5">@Model.Id</code>
                            </div>
                        </div>

                        <div class="row g-4">
                            <div class="col-md-6 col-lg-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-white rounded p-2 me-3">
                                        <i class="fas fa-dollar-sign text-info"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Currency</small>
                                        <div class="badge bg-info text-white">
                                            @Model.CurrencyCode - @Model.CurrencyName
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-white rounded p-2 me-3">
                                        <i class="fas fa-calendar text-success"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Created At</small>
                                        <strong>@Model.CreatedAt.ToString("dd MMM yyyy")</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-white rounded p-2 me-3">
                                        <i class="fas fa-tag text-warning"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Symbol</small>
                                        <strong>@Model.CurrencySymbol</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Related Data Stats -->
                    <div class="p-4">
                        <h3 class="h5 mb-4">
                            <i class="fas fa-chart-bar me-2 text-primary"></i>
                            Related Data That Will Be Deleted
                        </h3>

                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card border-warning h-100 hover-shadow">
                                    <div class="card-body text-center py-4">
                                        <div class="text-warning mb-3">
                                            <i class="fas fa-wallet fa-3x"></i>
                                        </div>
                                        <h4 class="display-5 fw-bold @(Model.TreasuriesCount > 0 ? "text-warning" : "")">
                                            @Model.TreasuriesCount
                                        </h4>
                                        <p class="text-muted mb-0">Treasuries</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card border-warning h-100 hover-shadow">
                                    <div class="card-body text-center py-4">
                                        <div class="text-warning mb-3">
                                            <i class="fas fa-university fa-3x"></i>
                                        </div>
                                        <h4 class="display-5 fw-bold @(Model.BankAccountsCount > 0 ? "text-warning" : "")">
                                            @Model.BankAccountsCount
                                        </h4>
                                        <p class="text-muted mb-0">Bank Accounts</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card border-warning h-100 hover-shadow">
                                    <div class="card-body text-center py-4">
                                        <div class="text-warning mb-3">
                                            <i class="fas fa-file-invoice fa-3x"></i>
                                        </div>
                                        <h4 class="display-5 fw-bold @(Model.VouchersCount > 0 ? "text-warning" : "")">
                                            @Model.VouchersCount
                                        </h4>
                                        <p class="text-muted mb-0">Vouchers</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warning Alert -->
                    <div class="alert alert-warning border-0 rounded-0 m-0" role="alert">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="alert-heading">⚠️ Permanent Data Loss Warning</h4>
                                <p class="mb-0">
                                    All related treasuries, bank accounts, and vouchers will be permanently deleted.
                                    This action cannot be undone. Consider deactivating the company instead if you may need the data in the future.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer bg-white p-4">
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm">
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-times me-2"></i>
                                        Cancel
                                    </a>
                                    <a asp-action="Index" class="btn btn-outline-dark px-4">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        Back to List
                                    </a>
                                </div>
                                <button type="button" class="btn btn-danger px-5 py-2" id="deleteBtn">
                                    <i class="fas fa-trash-alt me-2"></i>
                                    Confirm Delete
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- إضافة SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#deleteBtn').on('click', function(e) {
                e.preventDefault();

                Swal.fire({
                    title: '⚠️ FINAL WARNING ⚠️',
                    html: `
                       
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Delete Permanently!',
                    cancelButtonText: 'Cancel',
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'btn btn-danger px-4',
                        cancelButton: 'btn btn-secondary px-4'
                    },
                    buttonsStyling: false,
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return new Promise((resolve) => {
                            setTimeout(() => {
                                resolve();
                            }, 500);
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Show loading state
                        $('#deleteBtn').prop('disabled', true);
                        $('#deleteBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');

                        // Submit the form
                        $('#deleteForm').submit();
                    }
                });
            });

            // Auto-hide error alerts after 5 seconds
            setTimeout(function() {
                $('.alert-danger').fadeOut('slow');
            }, 5000);

            // Add hover effect to cards
            $('.hover-shadow').hover(
                function() {
                    $(this).addClass('shadow');
                },
                function() {
                    $(this).removeClass('shadow');
                }
            );
        });
    </script>

    <style>
        .hover-shadow {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-shadow:hover {
                transform: translateY(-5px);
            }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .display-5 {
            font-size: 3rem;
        }


        
    </style>
}