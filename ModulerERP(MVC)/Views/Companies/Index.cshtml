@model IEnumerable<ModulerERP_MVC_.Finance.Company.ViewModels.CompanyListViewModel>

@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="fas fa-building me-2 text-primary"></i>
                Companies Management
            </h2>
            <p class="text-muted mt-2">Manage your company profiles and configurations</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                Add New Company
            </a>
        </div>
    </div>
    @if (TempData["DeletedCompanyName"] != null)
    {
        <style>
            .delete-success-toast {
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 9999;
                animation: slideInRight 0.5s ease-out;
                max-width: 450px;
            }

            @@keyframes slideInRight {
                from {
                    opacity: 0;
                    transform: translateX(100px);
                }

                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            .success-toast-card {
                background: white;
                border-radius: 15px;
                box-shadow: 0 15px 50px rgba(0,0,0,0.2);
                overflow: hidden;
                border-left: 5px solid #38ef7d;
            }

            .success-toast-header {
                background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
                padding: 20px;
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .success-icon-circle {
                width: 50px;
                height: 50px;
                background: rgba(255,255,255,0.3);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                animation: popIn 0.6s ease-out 0.3s both;
            }

            @@keyframes popIn {
                0% {
                    transform: scale(0);
                }

                50% {
                    transform: scale(1.1);
                }

                100% {
                    transform: scale(1);
                }
            }

            .success-icon-circle i {
                font-size: 24px;
                color: white;
            }

            .success-toast-title {
                color: white;
                font-size: 20px;
                font-weight: 700;
                margin: 0;
            }

            .success-toast-body {
                padding: 20px;
            }

            .deleted-company-name {
                font-size: 18px;
                font-weight: 700;
                color: #2d3748;
                margin: 10px 0;
            }

            .success-toast-message {
                color: #718096;
                font-size: 14px;
            }
        </style>

        <div class="delete-success-toast" id="successToast">
            <div class="success-toast-card">
                <div class="success-toast-header">
                    <div class="success-icon-circle">
                        <i class="fas fa-check"></i>
                    </div>
                    <h5 class="success-toast-title">Deleted Successfully!</h5>
                </div>
                <div class="success-toast-body">
                    <p class="success-toast-message">The company has been permanently deleted:</p>
                    <div class="deleted-company-name">
                        <i class="fas fa-building me-2"></i>
                        @TempData["DeletedCompanyName"]
                    </div>
                </div>
            </div>
        </div>

        <script>
            setTimeout(function() {
                $('#successToast').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        </script>
    }
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-dismiss" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Companies Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Companies List
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fas fa-building me-1"></i>
                                    Company Name
                                </th>
                                <th>
                                    <i class="fas fa-dollar-sign me-1"></i>
                                    Currency
                                </th>
                                <th>
                                    <i class="fas fa-wallet me-1"></i>
                                    Treasuries
                                </th>
                                <th>
                                    <i class="fas fa-university me-1"></i>
                                    Bank Accounts
                                </th>
                                <th>
                                    <i class="fas fa-file-invoice me-1"></i>
                                    Vouchers
                                </th>
                                <th>
                                    <i class="fas fa-calendar me-1"></i>
                                    Created At
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cog me-1"></i>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@company.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @company.CurrencyCode - @company.CurrencyName
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@company.TreasuriesCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@company.BankAccountsCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark">@company.VouchersCount</span>
                                    </td>
                                    <td>
                                        @company.CreatedAt.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@company.Id"
                                               class="btn btn-sm btn-outline-info"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@company.Id"
                                               class="btn btn-sm btn-outline-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@company.Id"
                                               class="btn btn-sm btn-outline-danger"
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No companies found</h5>
                    <p class="text-muted">Get started by creating your first company</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>
                        Create Company
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}