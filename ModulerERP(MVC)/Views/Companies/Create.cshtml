@model ModulerERP_MVC_.Finance.Company.ViewModels.CreateCompanyViewModel

@{
    ViewData["Title"] = "Create Company";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-building me-1"></i>
                            Companies
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Create New Company</li>
                </ol>
            </nav>
            <h2 class="mb-0">
                <i class="fas fa-plus-circle me-2 text-primary"></i>
                Create New Company
            </h2>
            <p class="text-muted mt-2">Add a new company to your system</p>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-dismiss" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Create Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        Company Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="companyForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Company Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-building me-1 text-primary"></i>
                                Company Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="Enter company name"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Currency Code -->
                        <div class="mb-4">
                            <label asp-for="CurrencyCode" class="form-label">
                                <i class="fas fa-dollar-sign me-1 text-primary"></i>
                                Currency <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CurrencyCode" class="form-select form-select-lg" id="currencySelect">
                                <option value="">-- Select Currency --</option>
                                @if (ViewBag.Currencies != null)
                                {
                                    foreach (var currency in (IEnumerable<ModulerERP_MVC_.Finance.Currencies.ViewModels.CurrencyListViewModel>)ViewBag.Currencies)
                                    {
                                        <option value="@currency.Code.Trim()">
                                            @currency.Code - @currency.Name (@currency.Symbol)
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CurrencyCode" class="text-danger small"></span>
                            <small class="form-text text-muted mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                Currency code must be exactly 3 characters (e.g., USD, EUR, EGP)
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2"></i>
                                Create Company
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Card -->
        <div class="col-lg-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-info-circle me-2 text-info"></i>
                        Help & Information
                    </h6>
                    <hr>
                    <p class="small mb-3">
                        <strong>Company Name:</strong><br>
                        Enter a unique name for your company. This name will be used throughout the system.
                    </p>
                    <p class="small mb-3">
                        <strong>Currency:</strong><br>
                        Select the primary currency for this company. All financial transactions will use this currency by default.
                    </p>
                    <div class="alert alert-info mb-0 py-2">
                        <small>
                            <i class="fas fa-lightbulb me-1"></i>
                            <strong>Tip:</strong> Make sure to select the correct currency as it will be used for all company transactions.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Currency Preview Card -->
            <div class="card mt-3 d-none" id="currencyPreview">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-eye me-2 text-success"></i>
                        Selected Currency
                    </h6>
                    <hr>
                    <div id="currencyDetails">
                        <!-- Will be populated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // ✅ Currency Selection Preview
            $('#currencySelect').on('change', function() {
                var selectedOption = $(this).find('option:selected');
                var currencyCode = selectedOption.val();
                var currencyText = selectedOption.text();

                if (currencyCode) {
                    // Show preview card
                    $('#currencyPreview').removeClass('d-none');

                    // Extract currency details
                    var parts = currencyText.split(' - ');
                    var code = parts[0].trim();
                    var nameAndSymbol = parts[1] || '';
                    var name = nameAndSymbol.split('(')[0].trim();
                    var symbol = '';
                    var symbolMatch = nameAndSymbol.match(/\(([^)]+)\)/);
                    if (symbolMatch) {
                        symbol = symbolMatch[1];
                    }

                    // Update preview
                    $('#currencyDetails').html(
                        '<div class="row">' +
                            '<div class="col-12 mb-2">' +
                                '<strong>Code:</strong>' +
                                '<span class="badge bg-primary ms-2">' + code + '</span>' +
                            '</div>' +
                            '<div class="col-12 mb-2">' +
                                '<strong>Name:</strong>' +
                                '<span class="ms-2">' + name + '</span>' +
                            '</div>' +
                            '<div class="col-12">' +
                                '<strong>Symbol:</strong>' +
                                '<span class="ms-2 fs-5">' + symbol + '</span>' +
                            '</div>' +
                        '</div>'
                    );

                    console.log('Selected Currency Code:', currencyCode, 'Length:', currencyCode.length);
                } else {
                    // Hide preview if nothing selected
                    $('#currencyPreview').addClass('d-none');
                }
            });

            // ✅ Form validation enhancement with better error handling
            $('#companyForm').on('submit', function(e) {
                var currencyCode = $('#currencySelect').val();
                var companyName = $('input[name="Name"]').val();

                // Trim whitespace from currency code
                if (currencyCode) {
                    currencyCode = currencyCode.trim();
                    $('#currencySelect').val(currencyCode);
                }

                // Client-side validation
                if (!companyName || companyName.trim() === '') {
                    e.preventDefault();
                    alert('Please enter a company name');
                    return false;
                }

                if (!currencyCode || currencyCode === '') {
                    e.preventDefault();
                    alert('Please select a currency');
                    return false;
                }

                if (currencyCode.length !== 3) {
                    e.preventDefault();
                    alert('Currency code must be exactly 3 characters. Selected: ' + currencyCode);
                    console.error('Invalid currency code length:', currencyCode.length, 'Value:', currencyCode);
                    return false;
                }

                // Disable submit button and show loading state
                var submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Creating...');

                // Log for debugging
                console.log('Form submitting with:', {
                    name: companyName,
                    currencyCode: currencyCode,
                    currencyCodeLength: currencyCode.length
                });
            });

            // ✅ Re-enable submit button if user navigates back
            $(window).on('pageshow', function(event) {
                if (event.originalEvent.persisted) {
                    $('#submitBtn').prop('disabled', false);
                    $('#submitBtn').html('<i class="fas fa-save me-2"></i>Create Company');
                }
            });

            // ✅ Select2 enhancement (optional - if you're using Select2)
            if ($.fn.select2) {
                $('#currencySelect').select2({
                    placeholder: '-- Select Currency --',
                    allowClear: true,
                    width: '100%'
                });
            }
        });
    </script>
}