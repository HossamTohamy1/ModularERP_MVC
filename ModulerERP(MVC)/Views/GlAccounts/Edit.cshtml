@using ModulerERP_MVC_.Finance.GlAccounts.ViewModels
@using ModulerERP_MVC_.Common.Enums.Finance_Enum
@model GlAccountViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit GL Account";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-edit text-warning me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index">
                                    <i class="fas fa-book me-1"></i>GL Accounts
                                </a>
                            </li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm" style="display:none;">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Edit Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Code & Name -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label fw-bold">
                                    <i class="fas fa-hashtag text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.Code)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Code" class="form-control form-control-lg"
                                       placeholder="e.g. 1001" autofocus />
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-signature text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg"
                                       placeholder="e.g. Cash in Hand" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Type & Company -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label fw-bold">
                                    <i class="fas fa-layer-group text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.Type)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Type" class="form-select form-select-lg">
                                    <option value="">-- Select Type --</option>
                                    <option value="@((int)AccountType.Asset)">Asset</option>
                                    <option value="@((int)AccountType.Liability)">Liability</option>
                                    <option value="@((int)AccountType.Equity)">Equity</option>
                                    <option value="@((int)AccountType.Revenue)">Revenue</option>
                                    <option value="@((int)AccountType.Expense)">Expense</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CompanyId" class="form-label fw-bold">
                                    <i class="fas fa-building text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.CompanyId)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CompanyId" class="form-select form-select-lg"
                                        asp-items="ViewBag.Companies" disabled>
                                    <option value="">-- Select Company --</option>
                                </select>
                                <input type="hidden" asp-for="CompanyId" />
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Company cannot be changed after creation
                                </small>
                                <span asp-validation-for="CompanyId" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        <!-- Is Leaf -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsLeaf" class="form-check-input" type="checkbox"
                                       id="isLeafSwitch" style="width: 3rem; height: 1.5rem;">
                                <label class="form-check-label fw-bold ms-2" for="isLeafSwitch">
                                    <i class="fas fa-sitemap text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.IsLeaf)
                                </label>
                            </div>
                            <small class="text-muted ms-5">
                                <i class="fas fa-info-circle me-1"></i>
                                Leaf accounts can have transactions directly posted to them
                            </small>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                            <div>
                                <strong>Warning:</strong> Changing the account type or leaf status may affect
                                existing reports and transactions. Please ensure this change is necessary.
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-warning px-5 text-dark fw-bold">
                                <i class="fas fa-save me-2"></i>Update Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('.card').fadeIn(500);
        });
    </script>
}

