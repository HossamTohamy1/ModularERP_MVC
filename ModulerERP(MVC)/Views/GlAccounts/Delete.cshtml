@using ModulerERP_MVC_.Finance.GlAccounts.ViewModels
@using ModulerERP_MVC_.Common.Enums.Finance_Enum
@model GlAccountViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete GL Account";
}

<!-- إضافة SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-trash text-danger me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-book me-1"></i>GL Accounts
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <i class="fas fa-trash me-1"></i>Delete
                            </li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Card -->
    <div class="row">
        <div class="col-lg-10 col-xl-8 mx-auto">
            <div class="card shadow-lg border-danger delete-card">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="p-2 bg-white bg-opacity-25 rounded-circle me-3">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">Confirm Deletion</h4>
                            <small class="opacity-75">This action cannot be undone</small>
                        </div>
                    </div>
                </div>
                
                <!-- Warning Alert -->
                <div class="alert alert-danger border-0 rounded-0 mb-0 border-bottom border-danger border-2">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="alert-heading mb-2">⚠️ FINAL WARNING</h5>
                            <p class="mb-0">
                                You are about to permanently delete this GL account. This action <strong>cannot be undone</strong>.
                                If this account has any associated transactions, the deletion will be prevented.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Account Details Card -->
                    <div class="card border mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-file-alt text-danger me-2"></i>
                                Account Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Code -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-hashtag text-danger me-1"></i>
                                        Account Code
                                    </label>
                                    <div class="fs-4 fw-bold text-dark">
                                        <span class="badge bg-secondary bg-opacity-25 text-secondary p-3 fs-5">
                                            @Model.Code
                                        </span>
                                    </div>
                                </div>

                                <!-- Name -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-signature text-danger me-1"></i>
                                        Account Name
                                    </label>
                                    <div class="fs-4 fw-bold text-dark">@Model.Name</div>
                                </div>

                                <!-- Type -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-layer-group text-danger me-1"></i>
                                        Account Type
                                    </label>
                                    <div>
                                        @switch (Model.Type)
                                        {
                                            case AccountType.Asset:
                                                <span class="badge bg-success bg-opacity-25 text-success p-2 fs-6">
                                                    <i class="fas fa-coins me-1"></i>Asset
                                                </span>
                                                break;
                                            case AccountType.Liability:
                                                <span class="badge bg-danger bg-opacity-25 text-danger p-2 fs-6">
                                                    <i class="fas fa-file-invoice-dollar me-1"></i>Liability
                                                </span>
                                                break;
                                            case AccountType.Equity:
                                                <span class="badge bg-primary bg-opacity-25 text-primary p-2 fs-6">
                                                    <i class="fas fa-balance-scale me-1"></i>Equity
                                                </span>
                                                break;
                                            case AccountType.Revenue:
                                                <span class="badge bg-info bg-opacity-25 text-info p-2 fs-6">
                                                    <i class="fas fa-arrow-down me-1"></i>Revenue
                                                </span>
                                                break;
                                            case AccountType.Expense:
                                                <span class="badge bg-warning bg-opacity-25 text-warning p-2 fs-6">
                                                    <i class="fas fa-arrow-up me-1"></i>Expense
                                                </span>
                                                break;
                                        }
                                    </div>
                                </div>

                                <!-- Company -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-building text-danger me-1"></i>
                                        Company
                                    </label>
                                    <div class="fs-5 fw-semibold">@Model.CompanyName</div>
                                </div>

                                <!-- Is Leaf -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-sitemap text-danger me-1"></i>
                                        Is Leaf Account
                                    </label>
                                    <div>
                                        @if (Model.IsLeaf)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success p-2 fs-6">
                                                <i class="fas fa-check-circle me-1"></i>Yes - Can Post Transactions
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary p-2 fs-6">
                                                <i class="fas fa-times-circle me-1"></i>No - Parent Account
                                            </span>
                                        }
                                    </div>
                                </div>

                                <!-- Created Date -->
                                <div class="col-md-6 mb-4">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-calendar text-danger me-1"></i>
                                        Created Date
                                    </label>
                                    <div class="fs-5">
                                        <i class="far fa-calendar-alt me-1 text-muted"></i>
                                        @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Warning -->
                    <div class="alert alert-warning border-warning">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-database fa-2x text-warning"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="alert-heading mb-2">
                                    <i class="fas fa-database me-2"></i>Data Integrity Check
                                </h5>
                                <p class="mb-0">
                                    Before deletion, the system will check if this account has any:
                                    <span class="badge bg-danger ms-2">Transactions</span>
                                    <span class="badge bg-danger ms-1">Journal Entries</span>
                                    <span class="badge bg-danger ms-1">Sub-accounts</span>
                                    <br>
                                    If any of these exist, deletion will be <strong>automatically prevented</strong>.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light py-4">
                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                            <div class="d-flex gap-2 flex-wrap justify-content-center">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-lg btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <a asp-action="Index" class="btn btn-lg btn-outline-dark px-4">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                            <button type="button" class="btn btn-lg btn-danger px-5 py-3" id="deleteBtn">
                                <i class="fas fa-trash-alt me-2"></i>
                                <span>Confirm Delete</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .delete-card {
            animation: slideInUp 0.5s ease-out;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
        }

        .card-header.bg-danger {
            background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%) !important;
        }

        .border-danger {
            border-width: 2px !important;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border-left: 5px solid #dc3545;
        }

        .alert-warning {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border-left: 5px solid #ffc107;
        }

        .badge {
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <!-- إضافة SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // SweetAlert Confirmation
            $('#deleteBtn').on('click', function(e) {
                e.preventDefault();
                
                const accountType = '@Model.Type';
                const isLeaf = @Model.IsLeaf.ToString().ToLower();
                const leafText = isLeaf ? "This is a LEAF account (can have transactions)" : "This is a PARENT account (cannot have transactions)";
                
                Swal.fire({
                    title: '<span style="color: #dc3545"> FINAL CONFIRMATION </span>',
                    html: `
                       
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '<i class="fas fa-trash-alt me-2"></i>Yes, Delete Permanently',
                    cancelButtonText: '<i class="fas fa-times me-2"></i>Cancel',
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'btn btn-danger px-4 py-2',
                        cancelButton: 'btn btn-secondary px-4 py-2',
                        popup: 'shadow-lg'
                    },
                    buttonsStyling: false,
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return new Promise((resolve) => {
                            setTimeout(() => {
                                resolve();
                            }, 1000);
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Show loading state
                        $('#deleteBtn').prop('disabled', true);
                        $('#deleteBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');
                        
                        // Submit the form
                        $('#deleteForm').submit();
                    }
                });
            });

            // Fade in animation
            $('.delete-card').hide().fadeIn(500);

            // Add hover effect to buttons
            $('.btn').hover(
                function() {
                    $(this).addClass('shadow-sm');
                },
                function() {
                    $(this).removeClass('shadow-sm');
                }
            );

            // Helper function for badge colors
            function getTypeColor(type) {
                const colors = {
                    'Asset': 'success',
                    'Liability': 'danger',
                    'Equity': 'primary',
                    'Revenue': 'info',
                    'Expense': 'warning'
                };
                return colors[type] || 'secondary';
            }
        });
    </script>
}