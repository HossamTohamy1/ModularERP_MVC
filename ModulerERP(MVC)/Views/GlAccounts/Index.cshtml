@using ModulerERP_MVC_.Finance.GlAccounts.ViewModels
@using ModulerERP_MVC_.Common.Enums.Finance_Enum
@model GlAccountListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chart of Accounts";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="fas fa-book text-primary me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0">Manage General Ledger Accounts</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Account
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <i class="fas fa-filter me-2"></i>Search and Filter
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">
                        <i class="fas fa-search me-1"></i>Search
                    </label>
                    <input type="text" name="searchTerm" value="@Model.SearchTerm"
                           class="form-control" placeholder="Search by code or name...">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-layer-group me-1"></i>Account Type
                    </label>
                    <select name="type" class="form-select">
                        <option value="">All Types</option>
                        <option value="@((int)AccountType.Asset)" selected="@(Model.FilterType == AccountType.Asset)">Asset</option>
                        <option value="@((int)AccountType.Liability)" selected="@(Model.FilterType == AccountType.Liability)">Liability</option>
                        <option value="@((int)AccountType.Equity)" selected="@(Model.FilterType == AccountType.Equity)">Equity</option>
                        <option value="@((int)AccountType.Revenue)" selected="@(Model.FilterType == AccountType.Revenue)">Revenue</option>
                        <option value="@((int)AccountType.Expense)" selected="@(Model.FilterType == AccountType.Expense)">Expense</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">
                        <i class="fas fa-sitemap me-1"></i>Leaf Only
                    </label>
                    <select name="isLeaf" class="form-select">
                        <option value="">All</option>
                        <option value="true" selected="@(Model.IsLeaf == true)">Yes</option>
                        <option value="false" selected="@(Model.IsLeaf == false)">No</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Accounts Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h6 class="mb-0">
                <i class="fas fa-list me-2"></i>Accounts List
                @if (Model.GlAccounts.Any())
                {
                    <span class="badge bg-primary rounded-pill">@Model.GlAccounts.Count()</span>
                }
            </h6>
        </div>
        <div class="card-body p-0">
            @if (Model.GlAccounts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">
                                    <i class="fas fa-hashtag me-1"></i>Code
                                </th>
                                <th>
                                    <i class="fas fa-signature me-1"></i>Account Name
                                </th>
                                <th>
                                    <i class="fas fa-layer-group me-1"></i>Type
                                </th>
                                <th>
                                    <i class="fas fa-building me-1"></i>Company
                                </th>
                                <th>
                                    <i class="fas fa-sitemap me-1"></i>Leaf
                                </th>
                                <th>
                                    <i class="fas fa-calendar me-1"></i>Created Date
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cog me-1"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GlAccounts)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary fs-6">
                                            @item.Code
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                    </td>
                                    <td>
                                        @switch (item.Type)
                                        {
                                            case AccountType.Asset:
                                                <span class="badge bg-success">
                                                    <i class="fas fa-coins me-1"></i>Asset
                                                </span>
                                                break;
                                            case AccountType.Liability:
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-file-invoice-dollar me-1"></i>Liability
                                                </span>
                                                break;
                                            case AccountType.Equity:
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-balance-scale me-1"></i>Equity
                                                </span>
                                                break;
                                            case AccountType.Revenue:
                                                <span class="badge bg-info">
                                                    <i class="fas fa-arrow-down me-1"></i>Revenue
                                                </span>
                                                break;
                                            case AccountType.Expense:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-arrow-up me-1"></i>Expense
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-building text-muted me-1"></i>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        @if (item.IsLeaf)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success">
                                                <i class="fas fa-check me-1"></i>Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                <i class="fas fa-times me-1"></i>No
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @item.CreatedAt.ToString("MM/dd/yyyy")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details" data-bs-toggle="tooltip">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-warning" title="Edit" data-bs-toggle="tooltip">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-outline-danger" title="Delete" data-bs-toggle="tooltip">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-inbox fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted mb-3">No GL Accounts Available</h5>
                    <p class="text-muted mb-4">Start by adding a new account to your chart of accounts</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Add New Account
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}