@model IEnumerable<ModulerERP_MVC_.Common.Models.MasterCompany>

@{
    ViewData["Title"] = "Select Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white d-flex align-items-center">
                    <h3 class="mb-0 d-flex align-items-center">
                        <span class="icon-bg me-3">
                            <i class="fas fa-building"></i>
                        </span>
                        Select Your Company
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group company-list">
                            @foreach (var company in Model)
                            {
                                <a href="#"
                                   class="list-group-item list-group-item-action company-item border-0 mb-3"
                                   data-tenant-id="@company.Id"
                                   data-company-name="@company.Name">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="company-icon me-3">
                                                <i class="fas fa-briefcase"></i>
                                            </div>
                                            <div>
                                                <h5 class="mb-1 company-name">@company.Name</h5>
                                                <p class="mb-0 text-muted">
                                                    <small>
                                                        <i class="fas fa-coins me-1"></i> Currency: <strong>@company.CurrencyCode</strong>
                                                    </small>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-success-gradient px-3 py-2">
                                                <i class="fas fa-check-circle me-1"></i> Active
                                            </span>
                                            <i class="fas fa-chevron-right ms-3 text-muted arrow-icon"></i>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info border-0">
                            <i class="fas fa-info-circle me-2"></i> No companies available. Please create a new company.
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Create" class="btn btn-success btn-create">
                            <i class="fas fa-plus me-2"></i> Create New Company
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Form for POST -->
<form id="tenantForm" asp-action="SetTenant" method="post" style="display: none;">
    <input type="hidden" id="tenantIdInput" name="tenantId" />
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.company-item').click(function(e) {
                e.preventDefault();

                var tenantId = $(this).data('tenant-id');
                var companyName = $(this).data('company-name');

                if (confirm('Switch to company: ' + companyName + '?')) {
                    $('#tenantIdInput').val(tenantId);
                    $('#tenantForm').submit();
                }
            });
        });
    </script>
}

<style>
    /* Card Header Styling */
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        padding: 1.5rem !important;
        border-radius: 15px 15px 0 0 !important;
    }

    /* Icon Background */
    .icon-bg {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 12px 15px;
        border-radius: 12px;
        font-size: 1.2rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Company List */
    .company-list {
        gap: 0;
    }

    /* Company Item */
    .company-item {
        border-radius: 12px !important;
        padding: 1.5rem !important;
        transition: all 0.3s ease !important;
        background: #f8f9fa !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08) !important;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .company-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .company-item:hover {
            background: white !important;
            transform: translateX(8px) !important;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2) !important;
        }

            .company-item:hover::before {
                transform: scaleY(1);
            }

            .company-item:hover .arrow-icon {
                transform: translateX(5px);
                color: #667eea !important;
            }

            .company-item:hover .company-name {
                color: #667eea !important;
            }

            .company-item:hover .company-icon {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

    /* Company Icon */
    .company-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        color: #667eea;
        transition: all 0.3s ease;
    }

    /* Company Name */
    .company-name {
        font-weight: 700;
        color: #2c3e50;
        transition: color 0.3s ease;
    }

    /* Arrow Icon */
    .arrow-icon {
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    /* Badge Styling */
    .bg-success-gradient {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%) !important;
        border: none;
        font-weight: 600;
        font-size: 0.85rem;
    }

    /* Create Button */
    .btn-create {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%) !important;
        border: none !important;
        padding: 0.75rem 2rem !important;
        font-weight: 600 !important;
        border-radius: 10px !important;
        transition: all 0.3s ease !important;
        box-shadow: 0 4px 12px rgba(17, 153, 142, 0.3) !important;
    }

        .btn-create:hover {
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 20px rgba(17, 153, 142, 0.4) !important;
        }

    /* Card Styling */
    .card {
        border-radius: 15px !important;
        overflow: hidden;
    }

    /* Alert Styling */
    .alert {
        border-radius: 10px !important;
        border-left: 4px solid;
    }

    .alert-danger {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%) !important;
        border-left-color: #dc3545 !important;
    }

    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%) !important;
        border-left-color: #38ef7d !important;
    }

    .alert-info {
        background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%) !important;
        border-left-color: #17a2b8 !important;
    }
</style>