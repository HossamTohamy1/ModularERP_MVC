@model IEnumerable<ModulerERP_MVC_.Common.Models.MasterCompany>

@{
    ViewData["Title"] = "Select Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-building"></i> Select Your Company
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group">
                            @foreach (var company in Model)
                            {
                                <a href="#"
                                   class="list-group-item list-group-item-action company-item"
                                   data-tenant-id="@company.Id"
                                   data-company-name="@company.Name">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">
                                                <i class="fas fa-briefcase text-primary"></i> @company.Name
                                            </h5>
                                            <p class="mb-1 text-muted">
                                                <small>
                                                    <i class="fas fa-coins"></i> Currency: @company.CurrencyCode
                                                </small>
                                            </p>
                                        </div>
                                        <div>
                                            <span class="badge bg-success">Active</span>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No companies available. Please create a new company.
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Create New Company
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Form for POST -->
<form id="tenantForm" asp-action="SetTenant" method="post" style="display: none;">
    <input type="hidden" id="tenantIdInput" name="tenantId" />
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.company-item').click(function(e) {
                e.preventDefault();

                var tenantId = $(this).data('tenant-id');
                var companyName = $(this).data('company-name');

                if (confirm('Switch to company: ' + companyName + '?')) {
                    $('#tenantIdInput').val(tenantId);
                    $('#tenantForm').submit();
                }
            });
        });
    </script>
}