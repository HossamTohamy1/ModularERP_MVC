<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة الموارد</title>

    <!-- Bootstrap RTL CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts - Cairo for better Arabic support -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Inline CSS - مؤقت للتأكد من التطبيق */
        body {
            font-family: 'Cairo', 'Segoe UI', Tahoma, sans-serif !important;
            direction: rtl !important;
            text-align: right !important;
            background-color: #f5f7fa !important;
        }

        .container-fluid {
            padding: 2rem 1.5rem !important;
            max-width: 1400px !important;
            margin: 0 auto !important;
        }

        .navbar {
            box-shadow: 0 2px 8px rgba(0,0,0,.1) !important;
            background: white !important;
            padding: 1rem 0 !important;
        }

        .card {
            border: none !important;
            border-radius: 15px !important;
            box-shadow: 0 4px 15px rgba(0,0,0,.08) !important;
            margin-bottom: 1.5rem !important;
        }

        .card-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
            border-bottom: 2px solid #e9ecef !important;
            padding: 1.25rem 1.5rem !important;
            border-radius: 15px 15px 0 0 !important;
        }

        .card-body {
            padding: 1.5rem !important;
        }

        .table thead th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            color: white !important;
            font-weight: 600 !important;
            padding: 1rem 0.75rem !important;
            border: none !important;
        }

        .table tbody tr {
            transition: all 0.2s ease !important;
        }

            .table tbody tr:hover {
                background-color: #f8f9fa !important;
                transform: scale(1.002) !important;
            }

        .btn {
            border-radius: 8px !important;
            padding: 0.5rem 1.25rem !important;
            font-weight: 600 !important;
            transition: all 0.3s ease !important;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border: none !important;
        }

            .btn-primary:hover {
                transform: translateY(-2px) !important;
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4) !important;
            }

        .badge {
            padding: 0.45rem 0.85rem !important;
            font-weight: 600 !important;
            border-radius: 6px !important;
        }

            .badge.bg-success {
                background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%) !important;
            }

            .badge.bg-danger {
                background: linear-gradient(135deg, #fa709a 0%, #fee140 100%) !important;
            }

        .alert {
            border-radius: 12px !important;
            border: none !important;
            box-shadow: 0 2px 8px rgba(0,0,0,.08) !important;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%) !important;
            border-right: 4px solid #38ef7d !important;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%) !important;
            border-right: 4px solid #f5576c !important;
        }

        .form-control, .form-select {
            border-radius: 8px !important;
            border: 2px solid #e5e5e5 !important;
            padding: 0.625rem 1rem !important;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea !important;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15) !important;
            }

        .text-center.py-5 {
            padding: 4rem 2rem !important;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
            border-radius: 12px !important;
        }

        .btn-group .btn {
            padding: 0.375rem 0.75rem !important;
            margin: 0 2px !important;
        }

        .btn-outline-info:hover {
            background: #17a2b8 !important;
            color: white !important;
        }

        .btn-outline-success:hover {
            background: #38ef7d !important;
            color: white !important;
        }

        .btn-outline-warning:hover {
            background: #ffc107 !important;
            color: white !important;
        }

        .btn-outline-danger:hover {
            background: #dc3545 !important;
            color: white !important;
        }

        h2, h5, h6 {
            font-weight: 700 !important;
        }

        .row.mb-4.align-items-center {
            padding-bottom: 1.5rem !important;
            border-bottom: 3px solid #e9ecef !important;
            margin-bottom: 2rem !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-chart-line me-2"></i>
                    نظام إدارة الموارد
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>
                                الرئيسية
                            </a>
                        </li>

                        <!-- Finance Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="financeDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-coins me-1"></i>
                                المالية
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="financeDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Finance" asp-controller="Treasuries" asp-action="Index">
                                        <i class="fas fa-money-bill-wave me-2"></i>
                                        الخزائن
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" disabled>
                                        <i class="fas fa-university me-2"></i>
                                        الحسابات البنكية (قريباً)
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center text-muted py-3 mt-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white !important;">
        <div class="container">
            <span style="color: white;">&copy; 2025 - نظام إدارة الموارد - جميع الحقوق محفوظة</span>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Scripts -->
    <script>
        // Auto-hide alerts after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Add active class to current nav item
            var path = window.location.pathname;
            $('.nav-link').each(function() {
                var href = $(this).attr('href');
                if (path.indexOf(href) === 0 && href !== '/') {
                    $(this).addClass('active fw-bold');
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>