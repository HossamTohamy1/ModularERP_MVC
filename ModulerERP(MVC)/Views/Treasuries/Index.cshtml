@using ModulerERP_MVC_.Finance.Treasuries.ViewModels
@model TreasuryListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Treasuries";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="fas fa-money-bill-wave text-primary me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0">Manage Company Treasuries</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Treasury
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <i class="fas fa-filter me-2"></i>
                Search and Filter
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label fw-bold">
                        <i class="fas fa-search me-1"></i>Search
                    </label>
                    <input type="text"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           class="form-control"
                           placeholder="Search by name or description...">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-toggle-on me-1"></i>Status
                    </label>
                    <select name="status" class="form-select">
                        <option value="">All</option>
                        <option value="0" selected="@(Model.FilterStatus == ModulerERP_MVC_.Common.Enums.Finance_Enum.TreasuryStatus.Active)">Active</option>
                        <option value="1" selected="@(Model.FilterStatus == ModulerERP_MVC_.Common.Enums.Finance_Enum.TreasuryStatus.Inactive)">Inactive</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-redo me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Treasuries Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h6 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Treasury List
                @if (Model.Treasuries.Any())
                {
                    <span class="badge bg-primary rounded-pill">@Model.Treasuries.Count()</span>
                }
            </h6>
        </div>
        <div class="card-body p-0">
            @if (Model.Treasuries.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">
                                    <i class="fas fa-signature me-1"></i>Treasury Name
                                </th>
                                <th>
                                    <i class="fas fa-building me-1"></i>Company
                                </th>
                                <th>
                                    <i class="fas fa-money-bill me-1"></i>Currency
                                </th>
                                <th>
                                    <i class="fas fa-wallet me-1"></i>Balance
                                </th>
                                <th>
                                    <i class="fas fa-info-circle me-1"></i>Status
                                </th>
                                <th>
                                    <i class="fas fa-calendar me-1"></i>Created Date
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cog me-1"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Treasuries)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div>
                                            <strong class="d-block">@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>@item.Description
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <i class="fas fa-building text-muted me-1"></i>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                            @item.CurrencyCode
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="@(item.Balance >= 0 ? "text-success" : "text-danger")">
                                            <i class="fas @(item.Balance >= 0 ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>
                                            @item.Balance.ToString("N2") @item.CurrencySymbol
                                        </strong>
                                    </td>
                                    <td>
                                        @if (item.Status == ModulerERP_MVC_.Common.Enums.Finance_Enum.TreasuryStatus.Active)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @item.CreatedAt.ToString("MM/dd/yyyy")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-outline-info"
                                               title="Details"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Balance"
                                               asp-route-id="@item.Id"
                                               class="btn btn-outline-success"
                                               title="Balance"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-wallet"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-outline-warning"
                                               title="Edit"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-outline-danger"
                                               title="Delete"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-inbox fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted mb-3">No Treasuries Available</h5>
                    <p class="text-muted mb-4">Start by adding a new treasury to manage your company's funds</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Add New Treasury
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}