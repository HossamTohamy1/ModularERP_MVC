@using ModulerERP_MVC_.Finance.Treasuries.ViewModels
@model TreasuryBalanceViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Treasury Balance";
    var balancePercentage = Model.TotalIncome > 0 ? (Model.Balance / Model.TotalIncome * 100) : 0;
}

<div class="container-fluid">
    <!-- Header with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-wallet text-success me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index">
                                    <i class="fas fa-money-bill-wave me-1"></i>Treasuries
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Balance: @Model.TreasuryName</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.TreasuryId" class="btn btn-outline-info me-2">
                        <i class="fas fa-info-circle me-1"></i>Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <!-- Current Balance -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm h-100 border-0 @(Model.Balance >= 0 ? "border-start border-primary border-4" : "border-start border-danger border-4")">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-wallet fa-3x @(Model.Balance >= 0 ? "text-primary" : "text-danger") opacity-75"></i>
                    </div>
                    <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">
                        Current Balance
                    </h6>
                    <h2 class="mb-1 fw-bold @(Model.Balance >= 0 ? "text-primary" : "text-danger")">
                        @Model.Balance.ToString("N2")
                    </h2>
                    <small class="text-muted fw-bold">@Model.CurrencySymbol</small>
                    @if (Model.TotalIncome > 0)
                    {
                        <div class="progress mt-3" style="height: 6px;">
                            <div class="progress-bar @(Model.Balance >= 0 ? "bg-primary" : "bg-danger")"
                                 role="progressbar"
                                 style="width: @Math.Min(Math.Abs(balancePercentage), 100)%">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Total Income -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm h-100 border-0 border-start border-success border-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-arrow-down fa-3x text-success opacity-75"></i>
                    </div>
                    <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">
                        Total Income
                    </h6>
                    <h2 class="mb-1 fw-bold text-success">
                        @Model.TotalIncome.ToString("N2")
                    </h2>
                    <small class="text-muted fw-bold">@Model.CurrencySymbol</small>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2">
                            <i class="fas fa-plus-circle me-1"></i>Income
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Expense -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm h-100 border-0 border-start border-danger border-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-arrow-up fa-3x text-danger opacity-75"></i>
                    </div>
                    <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">
                        Total Expenses
                    </h6>
                    <h2 class="mb-1 fw-bold text-danger">
                        @Model.TotalExpense.ToString("N2")
                    </h2>
                    <small class="text-muted fw-bold">@Model.CurrencySymbol</small>
                    <div class="mt-3">
                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2">
                            <i class="fas fa-minus-circle me-1"></i>Expense
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transaction Count -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm h-100 border-0 border-start border-info border-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-list fa-3x text-info opacity-75"></i>
                    </div>
                    <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;">
                        Transaction Count
                    </h6>
                    <h2 class="mb-1 fw-bold text-info">
                        @Model.TransactionCount
                    </h2>
                    <small class="text-muted fw-bold">Transactions</small>
                    <div class="mt-3">
                        <span class="badge bg-info bg-opacity-10 text-info px-3 py-2">
                            <i class="fas fa-exchange-alt me-1"></i>Transactions
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Card -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        Treasury Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted mb-3">
                            <i class="fas fa-signature text-info me-2"></i>Treasury Name:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <strong class="fs-5">@Model.TreasuryName</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted mb-3">
                            <i class="fas fa-money-bill text-info me-2"></i>Currency:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-info bg-opacity-10 text-info border border-info fs-6 px-3 py-2">
                                @Model.CurrencyCode - @Model.CurrencySymbol
                            </span>
                        </dd>

                        <dt class="col-sm-4 text-muted mb-3">
                            <i class="fas fa-clock text-info me-2"></i>Last Transaction:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <strong>@Model.LastTransactionDate.ToString("MM/dd/yyyy")</strong>
                            <small class="text-muted ms-2">@Model.LastTransactionDate.ToString("HH:mm")</small>
                        </dd>
                    </dl>

                    <!-- Financial Summary -->
                    <div class="alert alert-light border mt-4" role="alert">
                        <h6 class="alert-heading mb-3">
                            <i class="fas fa-chart-line text-primary me-2"></i>
                            Financial Summary
                        </h6>
                        <div class="row text-center">
                            <div class="col-4">
                                <small class="text-muted d-block mb-1">Net Cash Flow</small>
                                <strong class="@(Model.Balance >= 0 ? "text-success" : "text-danger") fs-5">
                                    @((Model.TotalIncome - Model.TotalExpense).ToString("N2"))
                                </strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block mb-1">Avg Transaction</small>
                                <strong class="text-primary fs-5">
                                    @(Model.TransactionCount > 0 ? (Model.TotalIncome / Model.TransactionCount).ToString("N2") : "0.00")
                                </strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block mb-1">Balance Ratio</small>
                                <strong class="text-info fs-5">
                                    @(Model.TotalIncome > 0 ? (Model.Balance / Model.TotalIncome * 100).ToString("N1") : "0")%
                                </strong>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-lg btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.TreasuryId" class="btn btn-lg btn-info">
                            <i class="fas fa-info-circle me-2"></i>View Full Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation to cards
            $('.card').each(function(index) {
                $(this).hide().delay(index * 100).fadeIn(500);
            });

            // Animate progress bar
            $('.progress-bar').css('width', 0).animate({
                width: $('.progress-bar').attr('style').match(/width:\s*(\d+)/)[1] + '%'
            }, 1000);
        });
    </script>
}