@using ModulerERP_MVC_.Finance.Treasuries.ViewModels
@model TreasuryViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Edit Treasury";
}

<div class="container-fluid">
    <!-- Header with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-edit text-warning me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index">
                                    <i class="fas fa-money-bill-wave me-1"></i>Treasuries
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Edit: @Model.Name</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                        <i class="fas fa-eye me-1"></i>View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8 col-xl-7 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-file-edit me-2"></i>Edit Treasury Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CompanyId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Treasury Name & Company (ReadOnly) -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-signature text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name"
                                       class="form-control form-control-lg"
                                       placeholder="e.g. Main Treasury"
                                       autofocus />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-building text-warning me-1"></i>
                                    Company
                                </label>
                                <input type="text"
                                       value="@Model.CompanyName"
                                       class="form-control form-control-lg"
                                       readonly
                                       style="background-color: #f8f9fa;" />
                                <div class="form-text">
                                    <i class="fas fa-lock me-1"></i>
                                    Company cannot be changed after treasury creation
                                </div>
                            </div>
                        </div>

                        <!-- Currency & Status -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="CurrencyCode" class="form-label fw-bold">
                                    <i class="fas fa-money-bill text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.CurrencyCode)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CurrencyCode"
                                        class="form-select form-select-lg"
                                        asp-items="ViewBag.Currencies">
                                </select>
                                <span asp-validation-for="CurrencyCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-bold">
                                    <i class="fas fa-toggle-on text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.Status)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select form-select-lg">
                                    <option value="0">Active</option>
                                    <option value="1">Inactive</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Journal Account -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="JournalAccountId" class="form-label fw-bold">
                                    <i class="fas fa-book text-warning me-1"></i>
                                    @Html.DisplayNameFor(m => m.JournalAccountId)
                                    <span class="text-muted small">(Optional)</span>
                                </label>
                                <select asp-for="JournalAccountId"
                                        class="form-select form-select-lg"
                                        asp-items="ViewBag.GlAccounts">
                                    <option value="">-- Select Journal Account (Optional) --</option>
                                </select>
                                <span asp-validation-for="JournalAccountId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left text-warning me-1"></i>
                                @Html.DisplayNameFor(m => m.Description)
                                <span class="text-muted small">(Optional)</span>
                            </label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Enter a brief description of the treasury..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Current Balance Info -->
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <i class="fas fa-wallet fa-2x me-3"></i>
                            <div>
                                <strong>Current Balance:</strong>
                                <span class="@(Model.Balance >= 0 ? "text-success" : "text-danger") fs-5 fw-bold ms-2">
                                    @Model.Balance.ToString("N2") @Model.CurrencySymbol
                                </span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-warning text-dark px-5">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Add animation to form
            $('.card').hide().fadeIn(500);

            // Confirmation on submit
            $('form').on('submit', function(e) {
                if (!confirm('Are you sure you want to save the changes?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}