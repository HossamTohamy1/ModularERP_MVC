@using ModulerERP_MVC_.Finance.Treasuries.ViewModels
@model TreasuryViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Treasury";
}

<!-- إضافة SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<div class="container-fluid py-4">
    <!-- Header with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-trash text-danger me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-money-bill-wave me-1"></i>Treasuries
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <i class="fas fa-trash me-1"></i>Delete
                            </li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-xl-8 mx-auto">
            <!-- Main Warning Card -->
            <div class="card border-danger shadow-lg delete-card">
                <!-- Danger Header -->
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="p-2 bg-white bg-opacity-25 rounded-circle me-3">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">Confirm Deletion</h4>
                            <small class="opacity-75">Permanent action - cannot be undone</small>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Critical Warning -->
                    <div class="alert alert-danger border-0 rounded-0 mb-4 border-bottom border-danger border-2">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-radiation-alt fa-2x"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="alert-heading mb-2">⚠️ CRITICAL OPERATION</h4>
                                <p class="mb-0">
                                    You are about to permanently delete <strong class="text-decoration-underline">"@Model.Name"</strong>
                                    treasury. All associated transactions and history will be lost forever.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Treasury Details -->
                    <div class="card border mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle text-danger me-2"></i>
                                Treasury Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-signature text-danger me-1"></i>
                                        Treasury Name
                                    </label>
                                    <div class="fs-4 fw-bold text-dark">@Model.Name</div>
                                </div>

                                <!-- Company -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-building text-danger me-1"></i>
                                        Company
                                    </label>
                                    <div class="fs-5">@Model.CompanyName</div>
                                </div>

                                <!-- Currency -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-money-bill-wave text-danger me-1"></i>
                                        Currency
                                    </label>
                                    <div>
                                        <span class="badge" style="background-color: #d1ecf1; color: #0c5460; border: 1px solid #0c5460; padding: 0.5rem;">
                                            @Model.CurrencyCode (@Model.CurrencySymbol)
                                        </span>



                                    </div>
                                </div>

                                <!-- Balance -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-balance-scale text-danger me-1"></i>
                                        Current Balance
                                    </label>
                                    <div class="fs-4 fw-bold @(Model.Balance >= 0 ? "text-success" : "text-danger")">
                                        @Model.Balance.ToString("N2") @Model.CurrencySymbol
                                    </div>
                                </div>

                                <!-- Status -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-toggle-on text-danger me-1"></i>
                                        Status
                                    </label>
                                    <div>
                                        @if (Model.Status == ModulerERP_MVC_.Common.Enums.Finance_Enum.TreasuryStatus.Active)
                                        {
                                            <span class="badge " style="background-color: green; color: white; border: 1px solid #0c5460; padding: 0.5rem;">
                                                <i class="fas fa-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge " style="background-color: red; color: white; border: 1px solid #0c5460; padding: 0.5rem;">
                                                <i class="fas fa-times-circle me-1"></i>Inactive
                                            </span>
                                        }


                                    </div>
                                </div>

                                <!-- Created Date -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted small mb-1">
                                        <i class="fas fa-calendar-alt text-danger me-1"></i>
                                        Created Date
                                    </label>
                                    <div class="text-muted">
                                        <i class="far fa-calendar me-1"></i>
                                        @Model.CreatedAt.ToString("dd MMM yyyy")
                                    </div>
                                </div>

                                <!-- Description -->
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <div class="col-12">
                                        <label class="form-label text-muted small mb-1">
                                            <i class="fas fa-align-left text-danger me-1"></i>
                                            Description
                                        </label>
                                        <div class="border rounded p-3 bg-light">
                                            @Model.Description
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Balance Warning -->
                    @if (Model.Balance != 0)
                    {
                        <div class="alert alert-warning border-warning shadow-sm">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="alert-heading mb-2">
                                        <i class="fas fa-hand-paper me-2"></i>Balance Alert
                                    </h5>
                                    <p class="mb-0">
                                        This treasury contains a balance of
                                        <strong class="text-decoration-underline">@Model.Balance.ToString("N2") @Model.CurrencySymbol</strong>.
                                        Deleting it will permanently remove this amount from the system.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Data Loss Warning -->
                    <div class="alert alert-dark border-dark">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-database fa-2x"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="alert-heading mb-2">
                                    <i class="fas fa-trash-alt me-2"></i>What Will Be Deleted?
                                </h5>
                                <ul class="mb-0">
                                    <li>Treasury record and all its configurations</li>
                                    <li>Transaction history associated with this treasury</li>
                                    <li>Opening and closing balances</li>
                                    <li>Audit logs related to this treasury</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Final Warning Alert (بدلاً من الـ Switch) -->
                    <div class="alert alert-warning">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="alert-heading mb-2">
                                    <i class="fas fa-hand-paper me-2"></i>Final Warning
                                </h5>
                                <p class="mb-0">
                                    <strong>This action is permanent and cannot be undone.</strong>
                                    Click the delete button below to proceed with deletion.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card-footer bg-light py-4">
                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                            <div class="d-flex gap-2 flex-wrap justify-content-center">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-lg btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <a asp-action="Index" class="btn btn-lg btn-outline-dark px-4">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                            <button type="button"
                                    class="btn btn-lg btn-danger px-5 py-3"
                                    id="deleteBtn">
                                <i class="fas fa-trash-alt me-2"></i>
                                <span>Delete Permanently</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Alternative Action Suggestion -->
            <div class="alert alert-info mt-4">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-lightbulb fa-2x text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-bell me-2"></i>Consider This Alternative
                        </h6>
                        <p class="mb-0">
                            Instead of deleting, you can <strong>deactivate</strong> the treasury. This will:
                            <span class="badge bg-info ms-2">Preserve historical data</span>
                            <span class="badge bg-info ms-1">Maintain audit trail</span>
                            <span class="badge bg-info ms-1">Allow reactivation if needed</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .delete-card {
            animation: slideInUp 0.5s ease-out;
            border-width: 2px;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card-header.bg-danger {
            background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%) !important;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border-left: 5px solid #dc3545;
        }

        .alert-warning {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border-left: 5px solid #ffc107;
        }

        .alert-dark {
            background: linear-gradient(135deg, #e2e3e5 0%, #d6d8db 100%);
            border-left: 5px solid #495057;
        }

        .alert-info {
            background: linear-gradient(135deg, #d1ecf1 0%, #c3e6e8 100%);
            border-left: 5px solid #0dcaf0;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
            }

        .badge {
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <!-- إضافة SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function() {
            // SweetAlert Confirmation بدون switch
            $('#deleteBtn').on('click', function(e) {
                e.preventDefault();

                const hasBalance = @(Model.Balance != 0 ? "true" : "false");
                const balanceWarning = hasBalance ?
                    `<div class="alert alert-warning text-start mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Balance Alert:</strong> This treasury contains
                        <strong class="text-decoration-underline">@Model.Balance.ToString("N2") @Model.CurrencySymbol</strong>
                        which will be permanently removed!
                    </div>` : '';

                Swal.fire({
                    title: '<span style="color: #dc3545">⚠️ FINAL CONFIRMATION ⚠️</span>',
                    html: `
                        <div class="text-start">
                            <div class="alert alert-danger mb-3">
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-radiation-alt me-2"></i>
                                    PERMANENT DELETION CONFIRMATION
                                </h6>
                                <p class="mb-0">Are you absolutely sure you want to delete this treasury?</p>
                            </div>

                            ${balanceWarning}

                            <div class="card border mb-3">
                                <div class="card-body">
                                    <table class="table table-sm table-borderless mb-0">
                                        <tr>
                                            <td width="35%"><strong>Treasury Name:</strong></td>
                                            <td><strong class="text-danger">@Model.Name</strong></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Company:</strong></td>
                                            <td>@Model.CompanyName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Currency:</strong></td>
                                            <td><span class="badge bg-info">@Model.CurrencyCode (@Model.CurrencySymbol)</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Current Balance:</strong></td>
                                            <td>
                                                <span class="badge ${@Model.Balance >= 0 ? 'bg-success' : 'bg-danger'}">
                                                    @Model.Balance.ToString("N2") @Model.CurrencySymbol
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Status:</strong></td>
                                            <td>
                                                @if (Model.Status == ModulerERP_MVC_.Common.Enums.Finance_Enum.TreasuryStatus.Active)
                                                {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>Active
                                                        </span>
                                                }
                                                else
                                                {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times-circle me-1"></i>Inactive
                                                        </span>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="alert alert-dark">
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-database me-2"></i>
                                    Data That Will Be Lost:
                                </h6>
                                <ul class="mb-0 small">
                                    <li>Treasury configuration and settings</li>
                                    <li>All transaction history</li>
                                    <li>Balance records</li>
                                    <li>Audit logs</li>
                                </ul>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-skull-crossbones me-1"></i>
                                    This is <strong>IRREVERSIBLE</strong> and <strong>CANNOT</strong> be undone!
                                </small>
                            </div>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '<i class="fas fa-trash-alt me-2"></i>Yes, Delete Permanently',
                    cancelButtonText: '<i class="fas fa-times me-2"></i>Cancel',
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'btn btn-danger px-4 py-2',
                        cancelButton: 'btn btn-secondary px-4 py-2',
                        popup: 'shadow-lg'
                    },
                    buttonsStyling: false,
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return new Promise((resolve) => {
                            setTimeout(() => {
                                resolve();
                            }, 1000);
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Show loading state
                        $('#deleteBtn').prop('disabled', true);
                        $('#deleteBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');

                        // Submit the form
                        $('#deleteForm').submit();
                    }
                });
            });

            // Fade in animation
            $('.delete-card').hide().fadeIn(500);

            // Add hover effect to buttons
            $('.btn').hover(
                function() {
                    $(this).addClass('shadow-sm');
                },
                function() {
                    $(this).removeClass('shadow-sm');
                }
            );
        });
    </script>
}